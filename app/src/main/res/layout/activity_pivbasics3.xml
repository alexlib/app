<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn.PIVBasics3">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:background="#6D353232"
        android:backgroundTint="#6D353232"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:visibility="gone"
        app:backgroundTint="#6D353232" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/windowSizeHeadingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="7.5dp"
                android:gravity="center"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/windowSizeTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/windowSizeHeadingTextView"
                android:layout_marginEnd="7.5dp"
                tools:ignore="MissingConstraints" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/windowSizeImageView1"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:layout_below="@id/windowSizeTextView1"
                android:src="@drawable/window_size1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/windowSizeTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/windowSizeImageView1"
                android:layout_marginEnd="7.5dp"
                tools:ignore="MissingConstraints" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/windowSizeImageView2"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:layout_below="@id/windowSizeTextView2"
                android:src="@drawable/window_size2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/windowSizeTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/windowSizeImageView2"
                android:layout_marginEnd="7.5dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/windowSizeTextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/windowSizeTextView3"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="7.5dp"
                android:background="@drawable/group_text_border"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/windowSizeTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/windowSizeTextView4"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="7.5dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/windowSizeTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/windowSizeTextView5"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="7.5dp"
                android:background="@drawable/group_text_border"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/windowSizeTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/windowSizeTextView6"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="7.5dp"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        app:itemBackground="@android:color/white" />

</RelativeLayout>