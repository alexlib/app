<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn.Pos1_Activity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle="outsideInset"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pos1TextView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos1TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos1TextView0"
                tools:ignore="MissingConstraints" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos1ImageView0"
                android:layout_width="371dp"
                android:layout_height="153dp"
                android:layout_below="@id/pos1TextView1"
                android:src="@drawable/new_boundarylayer" />

            <TextView
                android:id="@+id/pos1TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos1ImageView0" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos1ImageView1"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_below="@id/pos1TextView2"
                android:src="@drawable/boundary_eq1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos1TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos1ImageView1" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos1ImageView2"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_below="@id/pos1TextView3"
                android:src="@drawable/boundary_eq2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos1TextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos1ImageView2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pos1TextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos1TextView4" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos1ImageView3"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_below="@id/pos1TextView5"
                android:layout_marginTop="23dp"
                android:src="@drawable/boundary_layer_image_2"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        app:itemBackground="@android:color/white" />

</RelativeLayout>