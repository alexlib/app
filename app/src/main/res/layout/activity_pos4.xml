<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Learn.Pos4_Activity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:background="#6D353232"
        android:backgroundTint="#6D353232"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:visibility="gone"
        app:backgroundTint="#6D353232" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pos4TextView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@+id/pos4TextView0"
                tools:ignore="MissingConstraints" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos4ImageView0"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_below="@id/pos4TextView1"
                android:src="@drawable/new_vorticity"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4ImageView0"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4TextView2"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4TextView3"
                tools:ignore="MissingConstraints" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos4ImageView1"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:layout_below="@id/pos4TextView4"
                android:src="@drawable/vorticity_eq"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4ImageView1"
                tools:ignore="MissingConstraints" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos4ImageView2"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:layout_below="@id/pos4TextView5"
                android:src="@drawable/new_circulation"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4ImageView2"
                tools:ignore="MissingConstraints" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos4ImageView3"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_below="@id/pos4TextView6"
                android:src="@drawable/circulation_eq"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4ImageView3"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/pos4TextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4TextView7"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pos4TextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7.5dp"
                android:layout_below="@id/pos4TextView8" />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/pos4ImageView4"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_below="@id/pos4TextView9"
                android:src="@drawable/vorticity_image"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        app:itemBackground="@android:color/white" />

</RelativeLayout>